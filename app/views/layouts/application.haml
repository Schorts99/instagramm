          - if user_signed_in?
            %li= link_to "Posteala", new_pic_path
            %li= link_to "Configuraciones", edit_user_registration_path
            %li= link_to "Salir", destroy_user_session_path, method: :delete
          - else
            %li= link_to "Ãšnete", new_user_registration_path
            %li= link_to "Ingresar", new_user_session_path


    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, class: 'alert alert-info'
        
      = yield